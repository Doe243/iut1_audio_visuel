<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}IUT ADIO VISUEL{% endblock %}
        </title>
        <link href="https://bootswatch.com/4/lux/bootstrap.min.css" rel="stylesheet" type="text/css">
        <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

        
        <style>
            *{
                margin: 0px;
                padding: 0px;
            }

            body{
                background-image:url(./assets/imges/computer.jpg) ;
                background-attachment: fixed;
                background-size: cover;
            }

            h2{
                font-size: 40px;
                color: black;
                margin-top: 90px;
            }

            p{
                font-size: 15px;
            }

            .form-control{
                background: #e0e0d1;
                font-size: 15px;
                color: black;
                margin-top: 10px;
                padding: 15px;
                font-weight: bold;
            }

            {# input[type="checkbox"]{
                margin-top: 20px;
                height: 15px;
                width: 15px;
                color: black
            } #}

            small{
                font-size:15px;
                margin-left: 10px;
            }

            .btn-info{
                float: right;
                font-size: 12px;
                width: 170px;
                border-radius: 100px;
                border: 0px;
                background: #873fdf;
            }

            h1{
                display: block;
                margin: 11px 0 17px 0;
                font-size: 100px;
                line-height: 80px;
                color: #f1ebe5;
                text-shadow: 0 13.36px 8.896px #c4b59d,0 -2px 1px #fff;
                letter-spacing: -4px;
            }
        </style>
    
        {% block stylesheets %}{% endblock %}
    </head>


    <body>

            <form action="{{ path('login') }}" method="post">

                <div class="container mt-5">
                    <div class="row">
                        <div class="col-md-5" style="background-color:#f5f5f0; border-radius: 20px; box-shadow: 2px 2px 1px rgba(50, 50, 50, 0.75);">
                        <h2 class="text-center" style="margin-top: 20px; color: #000; font-weight: bold">Connexion</h2>
                        <hr>
                        <p class="text-left">Si vous n'avez pas de compte? <a href="{{ path('inscription') }}">Cliquez pour en créer</a></p>
                        
                        <hr>
                        
                         {% if error %}
                            <div class="alert alert-danger">Une erreur est survenue, le nom d'utilisateur ou alors le mot de passe est invalide</div>
                         {% endif %}

                        <label for="email">Adresse email :</label>
                        <input type="text" class="form-control" name="_username" id="email" placeholder="Tapez votre email..." required value="{{ lastUsername }}">
                        <br>
                        <label for="password">Mot de passe :</label>
                        <input type="password" class="form-control" name="_password" id="password" placeholder="Tapez votre mot de passe" required>

                        {# <input type="checkbox"> <small>Se souvenir de moi</small> #}
                        <br>
                        <p class="text-right"><a href="">Mot de passe oublié</a></p>

                        <div class="form-group">
                            <button class="btn btn-info mb-5" type="submit">Se connecter</button>
                        </div>
                </div>
            </form>
            <div class="col-md-3"></div>
            <div class="col-md-4">
                <h1 class="text-right"><span style="color: #000">IUT</span><span style="color: red"> 1</span> AUDIO VISUEL</h1>
                <img src="./assets/imges/audio2.png" style="text-shadow: 0 13.36px 8.896px #c4b59d,0 -2px 1px #fff;"  width="100">
            </div>
        </div>
    </div>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script crossorigin="anonymous" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script crossorigin="anonymous" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script crossorigin="anonymous" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    {% block javascripts %}{% endblock %}
    </body>
</html>